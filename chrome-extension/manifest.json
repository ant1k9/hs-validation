{
    "name": "Topic validation",
    "description": "Helper for hyperskill topics creation",
    "version": "0.3",
    "manifest_version": 3,
    "action": {
        "default_popup": "validation.html",
        "default_icon": "rocket.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+V",
                "mac": "MacCtrl+Shift+V"
            },
            "description": "Validate topic on Stepik"
        }
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://stepik.org/",
        "https://hyperskill.org/"
    ],
    "content_scripts": [
        {
            "matches": ["*://stepik.org/*", "*://hyperskill.org/*"],
            "js": ["helper.js"],
            "css": ["helper.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injection.js",
                "inject_class.js",
                "icons/new-topic.png",
                "icons/percent.png"
            ],
            "matches": ["*://stepik.org/*", "*://hyperskill.org/*"]
        }
    ]
}
